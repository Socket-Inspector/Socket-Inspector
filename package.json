{
  "name": "socket-inspector",
  "displayName": "Socket Inspector",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build && pnpm detect:monaco:cdn",
    "build:firefox": "wxt build -b firefox && pnpm detect:monaco:cdn",
    "dev:mock": "VITE_MOCK_TAB_ID=1234 wxt",
    "build:mock": "VITE_MOCK_TAB_ID=1234 wxt build",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "prepare": "wxt prepare",
    "test:unit": "vitest run",
    "serve:test-app": "cd playwright/test-app/ui && yarn serve:prod & cd playwright/test-app/api && yarn serve",
    "test:e2e:install": "playwright install",
    "test:e2e": "VITE_MOCK_TAB_ID=1234 wxt build && playwright test",
    "test:e2e:debug": "VITE_MOCK_TAB_ID=1234 wxt build && playwright test --ui",
    "format": "prettier --write .",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "detect:monaco:cdn": "grep -R -q \"cdn.jsdelivr.net\" .output 2>/dev/null && (echo '\\033[1;31m==========================\\033[0m' && echo '\\033[1;31m⚠️  BLUE ARGON VIOLATION  ⚠️\\033[0m' && echo '\\033[1;31mMust remove cdn.jsdelivr.net from build output\\033[0m' && echo '\\033[1;31m==========================\\033[0m' && exit 1) || exit 0"
  },
  "dependencies": {
    "@monaco-editor/react": "4.7.0",
    "@mswjs/interceptors": "^0.38.7",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/react-virtual": "^3.13.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.515.0",
    "monaco-editor": "^0.52.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-resizable-panels": "^3.0.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "tw-animate-css": "^1.3.4",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@wxt-dev/module-react": "^1.1.3",
    "babel-plugin-react-compiler": "^1.0.0",
    "happy-dom": "^20.0.10",
    "oxlint": "^1.13.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wxt": "^0.20.6"
  }
}
